<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@xuser) do |f| %>
      <%= label name %>
      <%= text_field name %>

      <%= label email %>
      <%= email_field email %>

      <%= label password %>
      <%= password_field password %>

      <%= submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>