<%= link_to "Log out", logout_path, method: :delete %>

<% if flash[:success] %>
<div class='notice'> <%= flash[:success] %> </div>
<% end %>

<% @posts.each do |post| %>
  <div>
    <p><%= post.message %> - 
      <span> <%= Post.format_time(post.created_at) %> </span>
    </p>
  </div>

<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
